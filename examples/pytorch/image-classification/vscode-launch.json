    "version": "0.2.0",
    "configurations": [
        {
            "name": "[Eval] vit on imgnet-1k", 
            "type": "python",
            "request": "launch",
            "justMyCode": false,
            
            "env": {
                "CUDA_VISIBLE_DEVICES": "2",
                "TORCH_DISTRIBUTED_DEBUG": "DETAIL",
                "WANDB_MODE": "disabled",
                "WANDB_PROJECT": "dev-vit-imgnet",
                "WANDB_WATCH": "false",
            },
            "cwd": "${workspaceFolder}/transformers/examples/pytorch/image-classification",
            "program": "run_image_classification.py",
            "args": [
                "--model_name_or_path", 
                "google/vit-base-patch16-224",
                // "google/vit-large-patch16-224",
                "--dataset_name", "imagenet",
                "--data_dir", "/data/dataset/imagenet/ilsvrc2012/torchvision/",
                "--output_dir", "/tmp/vscode-dev/imgnet1k_outputs/",
                "--remove_unused_columns", "False",
                "--do_eval",
                "--per_device_eval_batch_size", "128",
                "--dataloader_num_workers", "16",
                "--seed", "1337"
            ]
        },
    ]
}